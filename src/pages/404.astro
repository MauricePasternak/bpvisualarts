---
import { Icon } from 'astro-icon/components'
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>404 Not Found</title>
		<link href="/dist/output.css" rel="stylesheet" />
	</head>
	<body class="flex h-screen items-center justify-center bg-gray-100">
		<div class="text-center">
			<Icon name="mdi:alert-circle-outline" class="mx-auto mb-4 h-24 w-24 text-red-500" />
			<h1 class="mb-4 text-6xl font-bold text-gray-800">404</h1>
			<p class="mb-8 text-xl text-gray-600">Oops! The page you're looking for doesn't exist.</p>
			<a href="/" class="text-blue-500 hover:underline">Go back to Home</a>
		</div>
	</body>
</html>
