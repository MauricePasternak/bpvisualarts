---
import { Image } from 'astro:assets'
import type { LocalImageProps } from 'astro:assets'

const { src, alt, class: className, ...rest } = Astro.props as LocalImageProps
---

<div class=`grid-item ${className}`>
	<Image src={src} alt={alt} class=`h-full w-full object-cover object-center` {...rest} />
</div>
